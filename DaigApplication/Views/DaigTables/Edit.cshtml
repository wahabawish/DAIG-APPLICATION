@model DaigApplication.Models.DaigTable

@{
    ViewData["Title"] = "Edit";
}

<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden" style="min-height: 100vh;">
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.8) !important;
            backdrop-filter: saturate(200%) blur(15px);
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .text-dark-blue {
            color: hsl(210, 50%, 20%);
        }

        .text-light-blue {
            color: hsl(210, 50%, 50%);
        }

        .text-large {
            font-size: 1.5rem;
        }

        .text-xl {
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn-container {
            margin-top: 1.5rem;
            text-align: center;
        }

        .btn-custom {
            font-size: 1.25rem;
        }
    </style>

    <div class="container-fluid px-4 py-5">
        <div class="bg-glass rounded-3">
            <div class="text-center mb-4">
                <img style="width: 200px;" src="https://www.zarla.com/images/zarla-chef-cater-1x1-2400x2400-20211026-v769dxdqdhydpqbqjff6.png?crop=1:1,smart&width=250&dpr=2" alt="Alternate Text" />
                <h1 class="text-dark-blue text-xl">Edit</h1>
            </div>

            <hr class="my-4" />

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="DaigType" class="text-dark-blue text-large control-label"></label>
                            <input asp-for="DaigType" class="form-control" />
                            <span asp-validation-for="DaigType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DaigStatus" class="text-dark-blue text-large control-label"></label>
                            <input asp-for="DaigStatus" class="form-control" />
                            <span asp-validation-for="DaigStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DaigAvailability" class="text-dark-blue text-large control-label"></label>
                            <input asp-for="DaigAvailability" class="form-control" />
                            <span asp-validation-for="DaigAvailability" class="text-danger"></span>
                        </div>
                        <div class="btn-container">
                            <input type="submit" value="Save" class="btn btn-primary btn-custom" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-dark btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</section>
